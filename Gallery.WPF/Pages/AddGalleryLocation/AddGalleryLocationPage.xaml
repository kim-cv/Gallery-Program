<Page x:Class="Gallery.WPF.Pages.AddGalleryLocation.AddGalleryLocationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Gallery.WPF.Pages.AddGalleryLocation"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddGalleryLocationPage">

    <StackPanel>
        <Button Command="{Binding btnCmdChooseLocationPath}" Height="40">Choose folder location</Button>

        <TextBlock Height="40">
            <Run Text="Selected path: "/>
            <Run Text="{Binding selectedPath}"/>
        </TextBlock>

        <Grid Height="40">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <TextBlock VerticalAlignment="Center" Grid.Row="0" Grid.Column="0" Text="Choose name:"/>
            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding galleryName, Mode=TwoWay}"></TextBox>
        </Grid>

        <Button Height="40" Margin="0,20,0,0" Command="{Binding btnCmdSave}">Save</Button>
    </StackPanel>
</Page>

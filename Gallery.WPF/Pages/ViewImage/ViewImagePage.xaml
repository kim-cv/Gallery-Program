<Page x:Class="Gallery.WPF.Pages.ViewImage.ViewImagePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Gallery.WPF.Pages.ViewImage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ViewImage">

    <Grid
        Background="#121212">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="25px"></RowDefinition>
        </Grid.RowDefinitions>

        <Image 
            Grid.Column="0"
            Grid.Row="0"
            Source="{Binding image.fullImage}" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" 
            Stretch="Uniform" 
            StretchDirection="Both"/>

        <StackPanel
            Grid.Column="0"
            Grid.Row="1"
            Orientation="Horizontal"
            HorizontalAlignment="Center">

            <Button Command="{Binding btnCmdBackToGallery}">Back To Gallery</Button>
            <Button Command="{Binding btnCmdPreviousImage}">Previous</Button>
            <Button Command="{Binding btnCmdNextImage}">Next</Button>
            
        </StackPanel>
    </Grid>
</Page>
